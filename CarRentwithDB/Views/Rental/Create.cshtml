@{
}
<form method="post" asp-action="Create">
    <h4>Szczeóły wypożyczenia</h4>
    <div class="form-group">
        <label asp-for="StartDate">Początek wypożyczenia</label>
        <input asp-for="StartDate" type="date" class="form-control" placeholder="Wybierz początek wypożyczenia">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Koniec wypożyczenia</label>
        <input asp-for="EndDate" type="date" class="form-control" placeholder="Wybierz koniec wypożyczenia">
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Potwierdz</button>
</form>