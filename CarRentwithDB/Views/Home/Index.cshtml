@{
    ViewData["Title"] = "Wypożyczalnia";
}

<section class="py-5 text-center bg-image position-relative" style="background-image: url('https://idsb.tmgrup.com.tr/ly/uploads/images/2022/09/13/230591.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; width: 100vw; margin-left: calc(50% - 50vw); min-height: 600px;">
    <div class="overlay"></div>

    <div class="row py-lg-5 position-relative">
        <div class="col-lg-6 col-md-8 mx-auto text-white ">
            <h1 class="fw-bold">Wypożyczalnia Samochodów</h1>
            <p class="lead fw-bold">Witaj w naszej wypożyczalni! Wybierz idealny samochód dla siebie i ciesz się komfortową podróżą.</p>
            <form class="d-flex justify-content-center mt-4" role="search">
                <input class="form-control me-2" type="search" placeholder="Szukaj..." aria-label="Search" style="max-width: 400px;">
                <button class="btn btn-primary" type="submit">Szukaj</button>
            </form>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Najgorętsze oferty w tym miesiącu</h2>
        </div>

