@using CarRentwithDB.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h1>Stwórz nowe konto </h1>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorki!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <p>Coding@1234?</p>
                <form asp-action="RegisterCustomer" enctype="multipart/form-data">
                    <h4>Ogólne Informacje</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label">Imię</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Surname" class="control-label">Nazwisko</label>
                        <input asp-for="Surname" class="form-control">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label">Numer Telefonu</label>
                        <input asp-for="Phone" class="form-control">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="control-label ">Email</label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label">Hasło</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label">Potwierdź hasło</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Image" class="control-label ">Zdjęcie</label>
                        <input asp-for="Image" class="form-control">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.DrivingLicence" class="control-label ">Numer prawa jazdy</label>
                        <input asp-for="registerCustomer.DrivingLicence" class="form-control">
                        <span asp-validation-for="registerCustomer.DrivingLicence" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.Street" class="control-label ">Ulica</label>
                        <input asp-for="registerCustomer.Street" class="form-control">
                        <span asp-validation-for="registerCustomer.Street" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.HouseNumber" class="control-label ">Numer Domu</label>
                        <input asp-for="registerCustomer.HouseNumber" class="form-control">
                        <span asp-validation-for="registerCustomer.HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.City" class="control-label ">Miasto</label>
                        <input asp-for="registerCustomer.City" class="form-control">
                        <span asp-validation-for="registerCustomer.City" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.Voivodeship" class="control-label ">Województwo</label>
                        <input asp-for="registerCustomer.Voivodeship" class="form-control">
                        <span asp-validation-for="registerCustomer.Voivodeship" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="registerCustomer.Zip" class="control-label ">Kod pocztowy</label>
                        <input asp-for="registerCustomer.Zip" class="form-control">
                        <span asp-validation-for="registerCustomer.Zip" class="text-danger"></span>
                    </div>
                    <div class="mb-3" id="formContainer"></div>
                    <div class="form-group mb-3">
                        <input class="btn btn-outline-success float right " type="submit" value="Rejestruj" />
                        <a class="btn btn-success btn-sm " asp-controller="Car" asp-action="Index">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
