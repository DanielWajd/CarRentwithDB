@using CarRentwithDB.ViewModels
@using Microsoft.AspNetCore.Identity
@model DetailsBoardViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1 class="display-4 fw-normal">Szczegóły</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Car" asp-action="Create">Dodaj auto</a>
<div class="album py-5 bg-light">
    <div class="container">
        <p class="display-4 fw-normal">Auta dodane przez ciebie</p>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Cars)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">

                        <div class="card-body">
                            <p class="card-text">@item.Make</p>
                            <p class="card-text">@item.Model</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Car" asp-action="Details" asp-route-id="@item.CarId"
                                       class="btn btn-sm btn-outline-secondary">Podgląd</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("employee"))
                                    {
                                        <a asp-controller="Car" asp-action="Edit" asp-route-id="@item.CarId" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                                        <a asp-controller="Race" asp-action="Delete" asp-route-id="@item.CarId" class="btn btn-sm btn-outline-secondary">Usuń</a>
                                    }
                                </div>
                                <small class="text-muted">@item.LicencePlate</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
